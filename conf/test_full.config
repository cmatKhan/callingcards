/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/callingcards -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {

    config_profile_name        = 'Human Test Profile'
    config_profile_description = 'Minimal test dataset to check mammals pipeline function'

    datatype                   = 'mammal'
    //input                      = "${projectDir}/assets/mammals/samplesheet.csv"
    input                      = 'https://raw.githubusercontent.com/cmatKhan/test-datasets/callingcards/mammals/samplesheet_full.csv'
    genome                     = 'GRCm38'
    aligner                    = 'bwa'
    r1_bc_pattern              = 'NNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNN'
    r1_crop                    = 40
    min_mapq                   = 10
    max_cpus                   = 10
    max_memory                 = '14.GB'
}
